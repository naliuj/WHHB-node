<!DOCTYPE html>
<html>
<%- include('./header.ejs') %>
<%- include('./navbar.ejs') %>
<div class="container">
    <% if (message.length > 0) { %>
        <div class="alert alert-info"><%= message %></div>
    <% }; %>
    <form action="/shows" method="post" role="form">
        <div class="row">
            <div class="form-group col-md-6">
                <label for="name">Name:</label>
                <input type="text" name="name" class="form-control" />
            </div>
            <div class="form-group col-md-6">
                <label for="day">Day:</label>
                <select class="form-control" name="day">
                    <option selected></option>
                    <option value="monday">Monday</option>
                    <option value="tuesday">Tuesday</option>
                    <option value="wednesday">Wednesday</option>
                    <option value="thursday">Thursday</option>
                    <option value="friday">Friday</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="start">Start Time:</label>
                <select name="start" class="form-control">
                    <option selected></option>
                    <option value="2">2:00</option>
                    <option value="4">4:00</option>
                    <option value="6">6:00</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="stop">End Time:</label>
                <select name="stop" class="form-control">
                    <option selected></option>
                    <option value="4">4:00</option>
                    <option value="6">6:00</option>
                    <option value="8">8:00</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label for="mem1">Host 1:</label>
                <input type="text" name="mem1" class="form-control" />
            </div>
            <div class="form-group col-md-3">
                <label for="mem2">Host 2:</label>
                <input type="text" name="mem2" class="form-control" />
            </div>
            <div class="form-group col-md-3">
                <label for="mem3">Host 3:</label>
                <input type="text" name="mem3" class="form-control" />
            </div>
            <div class="form-group col-md-3">
                <label for="mem4">Host 4:</label>
                <input type="text" name="mem4" class="form-control" />
            </div>
        </div>
        <div class="row">
            <button class="form-control col-sm-12 btn btn-info" type="submit">
                Add Show</button>
        </div>
    </form>
</div>
</html>
