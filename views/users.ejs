<!DOCTYPE html>
<%- include('./header.ejs') %>
<html>
<body>
    <div class="container">
        <form action="/register" method="post" class="form-inline">
            <div class="form-group">
            <label for="username" class="sr-only">Username</label>
            <input type="text" name="username" class="form-control col-md-4"
                placeholder="Username" autocomplete="off" />
            </div>
            <div class="form-group">
            <label for="password" class="sr-only">Password</label>
            <input type="password" name="password" class="form-control col-md-4"
                placeholder="Password" />
            </div>
            <div class="form-group">
            <label for="confirmPassword" class="sr-only">Confirm Password</label>
            <input type="password" name="confirmPassword" placeholder="Confirm Password"
                class="form-control col-md-4" />
            </div>
            <div class="form-group">
            <label for="submit" class="sr-only">Submits</label>
            <input type="submit" class="btn btn-info form-control col-md-4"
                name="submit" value="Submit" />
            </div>
        </form>
    </div>
</body>
</html>
