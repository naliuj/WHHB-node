<!DOCTYPE html>
<%- include('./header.ejs') %>
<%- include('./navbar.ejs') %>
<html>
<body>
    <div class="container">

        <%
        // Show any messages that come back with authentication
        %>
        <% if(message.length > 0) { %>
            <div class="alert alert-info"><%= message %></div>
        <% }; %>

        <form action="/users" method="post" class="form-inline">
            <div class="form-group">
            <label for="username" class="sr-only">Username</label>
            <input type="text" name="username" class="form-control col-md-4"
                placeholder="Username" autocomplete="off" required />
            </div>
            <div class="form-group">
            <label for="password" class="sr-only">Password</label>
            <input type="password" name="password" class="form-control col-md-4"
                placeholder="Password" required />
            </div>
            <div class="form-group">
            <label for="confirmPassword" class="sr-only">Confirm Password</label>
            <input type="password" name="confirmPassword" placeholder="Confirm Password"
                class="form-control col-md-4" required />
            </div>
            <div class="form-group">
                <label for="role" class="sr-only">Role</label>
                <select name="role" class="form-control col-md-4" required>
                    <option value="0">User</option>
                    <option value="1">Admin</option>
                    <% if (req.user.local.role == 2) { %>
                        <option value="2">Dev</option>
                    <% }; %>
                </select>
            </div>
            <div class="form-group">
            <label for="submit" class="sr-only">Submits</label>
            <input type="submit" class="btn btn-info form-control col-md-4"
                name="submit" value="Submit" />
            </div>
        </form>
        <div class="table-responsive" id="table"></div>
    </div>
</body>
<script src="js/generateUserTable.js"></script>
</html>
